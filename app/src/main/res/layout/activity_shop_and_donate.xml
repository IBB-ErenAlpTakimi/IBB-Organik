<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShopAndDonate">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.969">

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="540dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shopborder"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="300dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/whiteborder"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/imgdonate" />
            </LinearLayout>

            <Button
                android:id="@+id/organicBuyButton"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:background="@drawable/mainbutton"
                android:text="Alışveriş Yap" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="540dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shopborder"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="300dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/whiteborder"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/shopp" />
            </LinearLayout>

            <Button
                android:id="@+id/domatebutton"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:background="@drawable/mainbutton"
                android:text="Bağış Yap" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>